<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Soma</title>
</head>
<body>
    <div class="soma">
         <h1>Soma dos números</h1>

        <input type="number" id="num1" placeholder="Número 1"> <br> <br>
        <input type="number" id="num2" placeholder="Número 2"> <br> <br>

        <button onclick="somar()">Somar</button>

        <p id="valor"></p>
    </div>
    <style>
        body {
            font-family: Helvetica, Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 70vh;
            margin: 10;
            background-color: #f7f7f7;
        }

        .soma {
            background-color: #fff;
            padding: 30px;
            border: 2px solid #ccc;
            text-align: center;
            width: 100%;
            max-width: 350px;
        }

         h1 {
            color: black;
            margin-bottom: 20px;
            font-weight: 100px;
            font-size: 1.8em;
        }

        input {
             margin-bottom: 15px;
            text-align: left;
        }

        button {
           width: 100%;
            padding: 10px;
            background-color: green;
            color: white;
            border: 1px solid;
            cursor: pointer;
        }
    </style>

    <script>
        function somar() {
            const numero1 = parseFloat(document.getElementById('num1').value);
            const numero2 = parseFloat(document.getElementById('num2').value);

            const soma = numero1 + numero2;

            if(isNaN(numero1) || isNaN(numero2)) {
                document.getElementById('valor').innerText = "Digite os números";
                return;
            }

            document.getElementById('valor').innerText = "O valor é: " + soma;
        }
    </script>
</body>
